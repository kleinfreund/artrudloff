<toggle-button
  {% if class %}class="{{ class }}"{% endif %}
  data-js="false"
>
  <button
    class="tb-button button"
    type="button"
    aria-pressed="false"
    data-toggle-button
  >
    <svg
      class="tb-open-icon"
      xmlns="http://www.w3.org/2000/svg"
      width="18"
      height="15"
      aria-hidden="true"
    >
      <path d="M0 0h18v3H0zM0 6h18v3H0zM0 12h18v3H0z" fill="currentColor" />
    </svg>

    <svg
      class="tb-close-icon"
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      stroke="currentColor"
      stroke-width="4"
      aria-hidden="true"
    >
      <line x1="2" x2="18" y1="2" y2="18" />
      <line x1="18" x2="2" y1="2" y2="18" />
    </svg>

    <span class="visually-hidden">Zeige Navigation</span>
  </button>
</toggle-button>
