---
layout: _includes/layouts/base.liquid
---
{%- for post in collections[collection_name] reversed -%}
  <article class="post">
    {% if post.data.images %}

      <h2>{{ post.data.title }}</h2>

      <div class="gallery">
        <div class="gallery-scroll-container" role="region" aria-label="Galerie" tabindex="0">
          {%- for image in post.data.images -%}
            <figure class="gallery-scroll-container__item gallery-item">
              <img class="gallery-item__image" src="{{ image.src }}" alt="{{ image.alt }}">

              <figcaption>
                {% if image.caption %}
                  {{ image.caption }}
                {% else %}
                  <span class="visually-hidden">{{ image.alt }}</span>
                {% endif %}
              </figcaption>
            </figure>
          {%- endfor -%}
        </div>

        {% if post.data.images.length > 1 %}
          <div class="gallery-controls">
            <button class="gallery-controls__button gallery-controls__prev-button" type="button">
              <span class="visually-hidden">Vorheriges</span>

              <svg class="gallery-controls__icon" width="10" height="17" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M.655 7.513l7.04-7.12a.862.862 0 011.23 0l.82.83c.34.343.34.899.002 1.242l-5.58 5.67 5.58 5.67c.338.344.337.9-.002 1.242l-.82.83a.862.862 0 01-1.23 0l-7.04-7.12a.886.886 0 010-1.244z" fill="currentColor"/>
              </svg>
            </button>

            <button class="gallery-controls__button gallery-controls__next-button" type="button">
              <span class="visually-hidden">NÃ¤chstes</span>

              <svg class="gallery-controls__icon" width="10" height="17" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M9.345 8.757l-7.04 7.12a.862.862 0 01-1.23 0l-.82-.83a.886.886 0 01-.002-1.242l5.58-5.67-5.58-5.67a.886.886 0 01.002-1.242l.82-.83a.862.862 0 011.23 0l7.04 7.12c.34.344.34.9 0 1.244z" fill="currentColor"/>
              </svg>
            </button>
          </div>
        {% endif %}
      </div>

    {% else %}

      {{ post.templateContent }}

    {% endif %}
  </article>
{%- endfor -%}
